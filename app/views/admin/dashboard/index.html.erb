<div class="container pt-3">
    <div>
        <div><h3>User count</h3></div>
        <div class="card-block row d-flex justify-content-around">
            <div class='card col-5 p-0'>
            <div class='card-header'><strong>Team Leads: </strong><%= @stats[:teamleads] %></div>
                    <% @lead_users.each do |volunteer| %>
                        <div class="mt-2 mb-2 border">
                        <strong class="pl-2">Full name:</strong> <%= volunteer.full_name %>
                        <br>
                        <strong class="pl-2">Email:</strong> <%= volunteer.email %>
                        </div>
                    <% end %>
            </div>
            <div class='card col-5 p-0'>
            <div class='card-header'><strong>General Volunteers: </strong><%= @stats[:genvol] %></div>
                    <% @gen_vol_users.each do |volunteer| %>
                        <div class="mt-2 mb-2 border">
                        <strong>Full name:</strong> <%= volunteer.full_name %>
                        <br>
                        <strong>Email:</strong> <%= volunteer.email %>
                        </div>
                        <%= form_tag("upcat/#{volunteer.id}", method: :patch) do %> 
                        <div class=“field”>
                           <%= label(:user_category, "user_category") %>
                           <%= select_tag "user_category", "<option>Guest</option><option>Team Lead</option>".html_safe %>
                        <%= submit_tag "Submit" %>
                        <% end %>
                       </div>
                    <% end %>
            </div>
            <div class='card col-11 p-0 mt-2'>
            <div class='card-header'><strong> Guests: </strong><%= @stats[:guests] %></div>
                    <% @guest_users.each do |volunteer| %>
                        <div class="mt-2 mb-2 border">
                        <strong>Full name:</strong> <%= volunteer.full_name %>
                        <br>
                        <strong>Email:</strong> <%= volunteer.email %>
                        </div>
                        <%= form_tag("upcat/#{volunteer.id}", method: :patch) do %>
                       <div class=“field”>
                           <%= label(:user_category, "user_category") %>
                           <%= select_tag "user_category", "<option>General Volunteer</option><option>Team Lead</option>".html_safe %>
                           <%= submit_tag "Submit" %>
                       </div>
                        <% end %>
                    <% end %>
            </div>
        </div>
    </div>
    <h3 class="mt-3">Current Events</h3>
    <table class='table table-bordered'>
        <thead class='thead-inverse'>
            <tr>
                <th>Event Name</th>
                <th>Event Start Time</th>
                <th>Event End Time</th>
                <th>Event Lead</th>
                <th>Event Creator</th>
                <th  colspan="2">Manage</th>
            </th>
        </thead>
        <tbody>
        <% @events.each do |event| %>
            <tr>
                <td><%= event.name %></td>
                <td><%= event.start_time.strftime('%H:%M') %></td>
                <td><%= event.end_time.strftime('%H:%M') %></td>
                <td><%= event.lead.full_name %></td>
                <td><%= event.creator.full_name %></td>
                <td><%= link_to 'Show', event %></td>
                <td><%= link_to fa_icon('times 2x'), event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <div>
        <div class="card-block row">
        <% @teams.each do |team| %>
            <% if team.members.count > 0 %>
            <div class="card col-4 p-0 mt-2">
                <div class="card-header"><%= team.name %></div>
                <div class="list-group">
                <% team.members.each do |member| %>
                   <div class="list-group-item list-group-item-action"> <%= member.full_name %>
                   <% user_team_record = UserTeam.where(user: member.id).where(team: team.id).first%>
                   <%= link_to fa_icon('times 2x'), userteam_url(user_team_record), method: :delete, data: {confirm: 'Are you sure?'}, class: "pull-right" %>
                   </div>
                   <br>
                <% end %>
                </div>
            </div>
            <% end %>
        <% end %>
        </div>
    </div>
</div>