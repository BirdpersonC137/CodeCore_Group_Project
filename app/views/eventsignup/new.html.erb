 <div class="row d-flex justify-content-center">
  <div class="col-md-5">
<%= form_tag("newsignup", method: "post", class:"form") do %>
    <div class="form-group">
         <%= label(:email, "Email", class:'form-label') %>
        <%= email_field(:email, "email", class: "form-control") %>
    </div>
    <%= submit_tag "Sign up!", class: "btn btn-primary"%>
<% end %>
  </div>
 </div>
