
<div class="container-fluid d-flex justify-content-center">
	<div class="col-lg-4">
		<h1 class="page-head"> Sign-up </h1>
		<%= simple_form_for(@user) do |f| %>
		        <%= f.input :first_name%>
		        <%= f.input :last_name%>
		        <%= f.input :email%>
		        <%= f.input :password%>
		        <%= f.input :password_confirmation%>
		        <%= f.submit class: "btn btn-primary"%>
		<%end%>
	</div>
</div>
