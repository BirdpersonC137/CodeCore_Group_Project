<!DOCTYPE html>
<html>
  <head>
    <title>ThisSectionClosed</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% if controller.controller_name == "welcome" && controller.action_name == "index" %>
    <nav class="navbar navbar-expand-md">
    <% else %>
        <nav class="navbar navbar-expand-md" style="background-color:navy" >
      <% end %>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#"> <%=image_tag("logo-white.png", width:'200') %> </a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item ">
            <%= link_to 'Home', root_path, class: "nav-link" %>
          </li>
<!--            <li class="nav-item">
            <a class="nav-link" href="#">Features</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Pricing</a>
          </li> -->
          <li class="nav-item">
            <%= link_to 'Calendar', events_path, class: "nav-link" %>
          </li>
        </ul>
        <ul class="navbar-nav second-nav ml-auto">
          <% if current_user %>
            <span style="color:lightblue"> Welcome, <%= current_user.full_name %>  </span>
            <li class="nav-item"> <%= link_to('Sign Out', session_path, method: :delete, class: 'nav-link btn btn-primary) %> </li>
            <% if current_user.user_category.name === 'Team Lead' %>
              <%= link_to 'Your Teams', teams_path %>
            <% end %>
          <% else %>
            <li class="nav-item"> <%= link_to 'Sign In', new_session_path, class: "nav-link btn btn-primary" %> </li>
          <% end %>
        </ul>
      </div>
    </nav>

        <% if controller.controller_name != "welcome" && controller.action_name != "index" %>

    <% if flash[:notice].present? %>
      <div class="alert onTop alert-warning alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
     <%=flash[:notice]%>
   </div> 
      <% end %>


        
      <% elsif flash[:alert].present? %>

          <%= flash[:alert] %>

      <% end %>

      <%= yield %>


  </body>
</html>
