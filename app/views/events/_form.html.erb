<%=simple_form_for @event do |f|%>
<%= f.input :name, label: 'Event Name'%>
<%= f.label :date %>

<%= f.text_field :date, "data-provide" => 'datepicker', "data-date-format"=>"dd-M-yyyy "%>
<%= f.input :start_time, label: 'Start Time:'%>
<%= f.input :end_time, label: 'End Time'%>
<%= f.input :location, label: 'Location'%>
<%= f.input :additional_info, label: 'Additional Information'%>
<%= f.input :attachment_url, label: 'Attachment URL'%>


<div>
        <%= f.label :event_category_id %>
        <%= f.select :event_category_id, @event_categories.map { |category| [category.name, category.id] } %>
</div>

<div>
        <%= f.label :lead_id %>
        <%= f.select :lead_id, @lead_users.map { |leader| [leader.first_name, leader.id] } %>
</div>


<%= f.submit%>
<% end %>
